<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <include layout="@layout/toolbar4" />
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize"
    tools:context=".addProperty.view.addPropertyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/property_type"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/spinner_property_type"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="284dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="197dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/hogar" />

            <TextView
                android:id="@+id/features"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"

                android:text="@string/address"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>



        <EditText
            android:id="@+id/address_first_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Primera línea de dirección"
            android:inputType="text"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:hint="@string/address_details" />

        <EditText
            android:id="@+id/address_second_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:hint="@string/address_other_details" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="284dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="203dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/edificios" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/city"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_marginTop="20dp" />



        </RelativeLayout>



        <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:hint="@string/choose_city" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="284dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="208dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/codigopostal" />

            <TextView
                android:id="@+id/txt_zipcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="@string/txt_postal_code"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />


        </RelativeLayout>





        <EditText
            android:id="@+id/zipcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_zipcode"
            android:layout_marginTop="10dp"
            android:hint="@string/postal_code"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="14sp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="284dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="208dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/colombia" />

            <TextView
                android:id="@+id/txt_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/state_txt"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginTop="20dp" />


        </RelativeLayout>


        <EditText
            android:layout_below="@+id/txt_state"
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:inputType="text"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:hint="@string/choose_state" />



        <!--Habitaciones-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Habitaciones"
                    android:backgroundTint="@color/azul"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000" />
            </RelativeLayout>

            <!--Number Picker-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_less_bedroom"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/azul"
                        android:text="@string/minus" />

                    <EditText
                        android:id="@+id/bedroom"
                        android:layout_width="wrap_content"
                        android:minWidth="40dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:text="@string/default_number" />

                    <Button
                        android:id="@+id/btn_plus_bedroom"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/azul"
                        android:text="@string/plus" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false">
            <!--Bathroom-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_bathroom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/bathroom"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000" />
            </RelativeLayout>

            <!--Number Picker-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_less_bathroom"
                        android:layout_width="40dp"
                        android:backgroundTint="@color/azul"
                        android:layout_height="match_parent"
                        android:text="@string/minus" />

                    <EditText
                        android:id="@+id/bathroom"
                        android:layout_width="wrap_content"
                        android:minWidth="40dp"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:text="@string/default_number" />

                    <Button
                        android:id="@+id/btn_plus_bathroom"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/azul"
                        android:text="@string/plus" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <!--Metros reales-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_metros"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Metros cuadrados"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!--Number Picker-->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/m2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:hint="Metros cuadrados..." />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <Button
                android:id="@+id/continue_step_one"
                android:letterSpacing="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:focusable="true"
                android:textAllCaps="false"
                android:layout_alignParentEnd="true"


                android:backgroundTint="@color/azul"
                android:text="@string/continue_text" />
        </RelativeLayout>


    </LinearLayout>

</ScrollView>

</FrameLayout>