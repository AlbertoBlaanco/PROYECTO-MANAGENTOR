<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="0dp">

        <include layout="@layout/toolbar3" />


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nombre -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_name_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/user" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Nombre"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/user_name_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>


                    </LinearLayout>




                </androidx.cardview.widget.CardView>

                <!-- Apellido -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_surname_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/user" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_surname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Apellido"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/apellido"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Fecha de nacimiento -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_birthdate_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/calendar" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Fecha de nacimiento"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/fecha_nac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- DNI -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_dni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_dni_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/dni" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_dni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="DNI"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/Dni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Contraseña -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_password_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/padlock" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_password"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Password"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/Pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Empresa -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_company_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/city" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Empresa"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/empresa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Teléfono -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_phone_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/phone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_tlf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Telefono"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/telefono"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Ciudad -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_city_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/city" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Ciudad"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/ciudad"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- Direccion -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_address_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/city" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Direccion"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/direccion"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <!-- Email -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/user_email_image"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/mail" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/user_mail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Email"
                                android:textColor="#000000"
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nombre Usuario"
                                android:textColor="#000000"
                                android:textSize="16sp"/>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


        <!-- Repeat this pattern for the remaining fields -->

    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
